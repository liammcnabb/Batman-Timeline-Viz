{
  "name": "batman-villain-timeline",
  "version": "0.1.0",
  "description": "A visualization of Batman villain appearances across Amazing Spider-Man Vol. 1 comic book series",
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "scrape": "ts-node src/index.ts scrape",
    "process": "ts-node src/index.ts process",
    "merge": "ts-node src/index.ts merge",
    "publish": "ts-node src/index.ts publish",
    "serve": "ts-node src/index.ts serve",
    "pipeline": "ts-node src/pipeline.ts",
    "pipeline-all": "ts-node src/pipelineAll.ts",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src/ --ext .ts",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm test",
    "prepare": "git config core.hooksPath .githooks",
    "format": "prettier --write '**/*.{json,md,yml,yaml}'"
  },
  "keywords": [
    "batman",
    "dc",
    "visualization",
    "d3js",
    "web-scraping"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "d3": "^7.8.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.{yml,yaml}": "prettier --write",
    "*.md": "prettier --write"
  }
}
